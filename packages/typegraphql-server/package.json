{
  "name": "@crz/type-graphql-server",
  "version": "0.0.1",
  "description": "Type-GraphQL server example",
  "author": "Daniel JORGE",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf dist coverage",
    "build": "rimraf dist && tsc -p ./tsconfig.prod.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node dist/main.js",
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "eslint --fix --ext .ts ./src",
    "test": "jest",
    "test:watch": "jest --watch --verbose",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:ci": "jest --coverage --ci --forceExit --detectOpenHandles --runInBand"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@crz/jwt-auth": "0.0.1",
    "apollo-datasource-rest": "0.4.0",
    "apollo-server-express": "2.5.0",
    "apollo-upload-server": "7.1.0",
    "class-validator": "0.9.1",
    "debug": "4.1.1",
    "express": "4.16.4",
    "graphql": "14.3.0",
    "graphql-voyager": "1.0.0-rc.27",
    "reflect-metadata": "0.1.13",
    "type-graphql": "0.17.3"
  },
  "devDependencies": {
    "@types/debug": "4.1.4",
    "@types/express": "4.16.1",
    "@types/graphql": "14.2.0",
    "@types/nock": "10.0.2",
    "apollo-server-testing": "2.5.0",
    "nock": "10.0.6",
    "nodemon": "1.19.0",
    "ts-node": "8.1.0"
  }
}
